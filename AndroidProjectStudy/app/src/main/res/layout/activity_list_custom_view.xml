<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_list_custom_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.emotiona.study.displayustomview.ListCustomViewActivity">

    <com.emotiona.study.widget.CustomTextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="20dp"
        app:textColor="@color/colorAccent"
        app:textSize="16sp"
        app:textText="我是一个自定义控件" />

    <com.emotiona.study.widget.CustomImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:image="@drawable/ic_important_devices"
        app:imageScaleType="center"
        app:title="我是表情"
        app:titleColor="@color/colorPrimary"
        app:titleSize="14sp" />

    <com.emotiona.study.widget.SurfView2
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal" />

    <com.emotiona.study.widget.WaterWaveView
        android:id="@+id/wave_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
